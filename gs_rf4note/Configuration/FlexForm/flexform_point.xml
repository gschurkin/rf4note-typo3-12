<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Options</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <switchableControllerActions>
                        <TCEforms>
                            <label>Select-Mode</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Show list of Fishspots</numIndex>
                                        <numIndex index="1">Point->list</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Show Fishspot</numIndex>
                                        <numIndex index="1">Point->show</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Add new Fishspot</numIndex>
                                        <numIndex index="1">Point->new</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>

                    <settings.select>
                        <TCEforms>
                            <displayCond>FIELD:switchableControllerActions:=:Point->list</displayCond>
                            <label>LLL:EXT:gs_rf4note/Resources/Private/Language/locallang_point.xlf:select</label>
                            <description>LLL:EXT:gs_rf4note/Resources/Private/Language/locallang_point.xlf:description</description>
                            <config>
                                <type>select</type>
                                <renderType>selectMultipleSideBySide</renderType>
                                <foreign_table>tx_gsrf4note_domain_model_point</foreign_table>
                                <rootLevel>1</rootLevel>
                                <enableMultiSelectFilterTextfield>1</enableMultiSelectFilterTextfield>
                            </config>
                        </TCEforms>
                    </settings.select>

                    <!-- PID Detail Page -->
					<settings.detailPid>
						<TCEforms>
							<label>LLL:EXT:gs_rf4note/Resources/Private/Language/locallang_point.xlf:flexforms_additional.detailPid</label>
							<config>
								<type>group</type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.detailPid>

					<!-- PID List Page -->
					<settings.listPid>
						<TCEforms>
							<label>LLL:EXT:gs_rf4note/Resources/Private/Language/locallang_point.xlf:flexforms_additional.listPid</label>
							<config>
								<type>group</type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.listPid>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
